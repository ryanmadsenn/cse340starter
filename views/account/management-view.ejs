<% if (title) { %>
    <h1 id="detail-title"><%= title %></h1>
<% } else { 
    res.redirect('/') 
} %> 

<% if (message) { %>
    <p class="notice"><%= message %></p>
<% } %> 

<% if (errors) { %>
  <ul class="errors">
    <% errors.array().forEach(function(error) { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<% if (locals.clientData.client_type === "Client") { %>
  <h1>Welcome <%= locals.clientData.client_firstname %></h1>
<% } else { %>
  <h2>Welcome <%= locals.clientData.client_firstname %></h2>
  <h3>Inventory Management</h3>
  <p><a class="management-link" href="/inv/">Inventory Management</a></p>
<% }; %>